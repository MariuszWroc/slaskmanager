<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:batch="http://www.springframework.org/schema/batch" 
	xmlns:task="http://www.springframework.org/schema/task"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/batch
	http://www.springframework.org/schema/batch/spring-batch-2.2.xsd
	http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
 
  <bean id="player" class="pl.mariuszczarny.slask.model.Player" scope="prototype" />
 
  <batch:job id="playerExportJob">
	<batch:step id="step1">
	  <batch:tasklet>
		<batch:chunk reader="cvsPlayerReader" writer="mysqlPlayerWriter" processor="itemProcessor"
			commit-interval="2">
		</batch:chunk>
	  </batch:tasklet>
	</batch:step>
  </batch:job>
  
    <!-- Optional ItemProcessor to perform business logic/filtering on the input records -->
  <bean id="itemProcessor" class="pl.mariuszczarny.slask.batch.processor.PlayerProcessor" />
  
  <bean id="cvsPlayerReader" class="org.springframework.batch.item.file.FlatFileItemReader">
 
        <property name="encoding" value="UTF-8" />
	<!-- Read a csv file -->
	<property name="resource" value="classpath:csv/player.csv" />
 
        <property name="lineMapper">
            <bean class="org.springframework.batch.item.file.mapping.DefaultLineMapper">
                <!-- split it -->
                <property name="lineTokenizer">
                    <bean
                        class="org.springframework.batch.item.file.transform.DelimitedLineTokenizer">
                        <property name="delimiter" value="|"/>
                        <property name="names" value="id, playerName" />
                    </bean>
                </property>
                <property name="fieldSetMapper">   
                    <!-- return back to reader, rather than a mapped object. -->
                    <!--
                   <bean class="org.springframework.batch.item.file.mapping.PassThroughFieldSetMapper" />
                    --> 
                    <!-- map to an object -->
                    <bean
                        class="org.springframework.batch.item.file.mapping.BeanWrapperFieldSetMapper">
                        <property name="prototypeBeanName" value="player" />
                    </bean>			
                </property>
 
            </bean>
        </property>
 
  </bean>
  
  <bean id="mysqlPlayerWriter"
          class="org.springframework.batch.item.database.JdbcBatchItemWriter" scope="step">
      <property name="dataSource" ref="dataSource" />
      <property name="sql">
        <value>
              <![CDATA[
                  UPDATE player SET cityName = :cityName WHERE id = :id; 
              ]]>
          </value>
      </property>
      <!-- It will take care matching between object property and sql name parameter -->
      <property name="itemSqlParameterSourceProvider">
          <bean
              class="org.springframework.batch.item.database.BeanPropertyItemSqlParameterSourceProvider" />
      </property>
  </bean>
 
</beans>